{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:backend": "tsx watch src/index.ts",
    "dev:client": "pnpm --filter ./client dev || (cd client && pnpm dev)",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:client\"",
    "build:client": "cd client && pnpm build",
    "build:server": "pnpm build",
    "start:prod": "pnpm run build:client && pnpm run build && node dist/index.js || (cd client && pnpm build && node ./dist/index.js)",
    "migrate": "npx prisma migrate dev --name init",
    "db:generate": "npx prisma generate",
    "start": "ENV_PATH=./.env node ./dist/index.js",
    "lint": "eslint .",
    "build": "pnpm db:generate && pnpm exec tsc -p ./tsconfig.json && pnpm db:generate && pnpm exec tsc-alias -p ./tsconfig.json",
    "lint:fix": "npm run lint --fix",
    "db:studio": "pnpm dlx prisma studio",
    "clean": "rm -rf dist && rm -rf client/dist"
  },
  "keywords": [],
