{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "target": "ES2022",

    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "skipLibCheck": true,
    "lib": ["ES2015"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "composite": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
